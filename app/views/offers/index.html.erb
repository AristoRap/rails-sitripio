<h1>We found <u><strong>XX</strong></u> for you</h1>

<div class="main">
  <ul class="cards">
    <% @offers.each do |offer| %>
      <%= link_to offer do %>
      <li class="cards_item">
        <div class="card-trip">
          <img src="https://source.unsplash.com/random" />
          <div class="card-trip-infos">
            <div>
              <h2><%= offer.title %></h2>
              <p><%= offer.description %></p>
              <h2 id="card-location"><%= offer.location %></h2>
            </div>
            <div>
              <h2 class="card-trip-pricing">â‚¬<%= offer.fee %></h2>
              <% if offer.organizer.photo.attached? %>
                <%= cl_image_tag offer.organizer.photo.key, class:'organizer-avatar'%>
              <% else %>
                <%= image_tag asset_path('avatar_default.png'), class: 'organizer-avatar' %>
              <% end %>
              <img  src="" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        </div>
      </li>
    <% end %>
    <% end %>
  </ul>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
